<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#FF0000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username/Useremail:"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/editprofileusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User sex:"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/editprofileusersex"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:hint="User sex"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Birthday:"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/editprofileuserbir"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:hint="MM/DD"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Country:"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/editprofileusercountry"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:hint="country"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="50dp"

        >

        <Button
            android:id="@+id/editprofileconfirm"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:textColor="#000000"
            android:textSize="10dp" />

        <Button
            android:id="@+id/editprofileback"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="10dp"

            />
    </LinearLayout>


</LinearLayout>